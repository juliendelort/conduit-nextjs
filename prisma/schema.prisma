// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  email             String    @unique
  username          String    @unique
  encryptedPassword String
  bio               String?
  image             String
  articles          Article[] @relation("WrittenArticles")
  favoritedArticles Article[] @relation("FavoritedArticles")
  following         Follow[]  @relation("following")
  followedBy        Follow[]  @relation("followedBy")

  @@index([email])
  @@index([username])
}

model Follow {
  followedBy   User @relation("followedBy", fields: [followedById], references: [id])
  followedById Int
  following    User @relation("following", fields: [followingId], references: [id])
  followingId  Int

  @@id([followingId, followedById])
}

model Article {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String
  body        String
  author      User     @relation("WrittenArticles", fields: [authorId], references: [id])
  authorId    Int
  favoritedBy User[]   @relation("FavoritedArticles")
  tagList     Tag[]
}

model Tag {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String    @unique
  articles  Article[]
}
